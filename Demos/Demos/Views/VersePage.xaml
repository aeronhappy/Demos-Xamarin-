<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demos.Views.VersePage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:viewmodels="clr-namespace:Demos.ViewModels"
             xmlns:models="clr-namespace:Demos.Models"
             x:DataType="viewmodels:VersionAppViewModel"
             >

    <ContentPage.BindingContext>
        <viewmodels:VersionAppViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior EventName="Appearing" Command="{Binding OnAppearingCommand1}" />
    </ContentPage.Behaviors>
    
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="{Binding VersionApp.version}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>