<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demos.Views.UsersDataPage"
             xmlns:viewmodels="clr-namespace:Demos.ViewModels"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:DataType="viewmodels:UsersDataViewModel"
             xmlns:models="clr-namespace:Demos.Models">

    <ContentPage.BindingContext>
        <viewmodels:UsersDataViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior EventName="Appearing" Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>
    
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Accounts.Users}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:User">
                    <Grid Padding="10">
                        <StackLayout Spacing="0">
                            <Label Text="{Binding Id}" />
                            <Label Text="{Binding UserName}" />
                            <Label Text="{Binding Email}" />
                        </StackLayout>
                    </Grid>
                </DataTemplate> 
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>